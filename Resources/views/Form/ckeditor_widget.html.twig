{% form_theme form _self %}

{% block ckeditor_widget %}
{% spaceless %}
    <script type="text/javascript" src="  {{ path }}ckeditor.js"></script>
    <script type="text/javascript">
        {% autoescape true js %}
        CKEDITOR.replace("{{ id }}");
        CKEDITOR.skinName = '{{ skin }}';
        {% endautoescape %}
    </script>
    <textarea {{ block('widget_attributes') }} class="ckeditor">{{ value }}</textarea>
{% endspaceless %}
{% endblock %}