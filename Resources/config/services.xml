<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="form.type.ckeditor.class">Ikimea\CKEditorBundle\Form\Type\CKEditorType</parameter>
    </parameters>
    <services>
        <service id="twig.extension.ikimea_ckeditor" class="Ikimea\CKEditorBundle\Twig\Extension\IkimeaCKEditorExtension">
            <argument type="service" id="service_container"></argument>
            <tag name="twig.extension" alias="ikimea_ckeditor" />
        </service>
         <service id="form.type.ckeditor" class="%form.type.ckeditor.class%">
            <tag name="form.type" alias="ckeditor" />
        </service>
    </services>
</container>